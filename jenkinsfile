pipeline{
  agent any
  environment {
  TERRAFORM_PATH = "/usr/bin/"
  PATH = "${PATH}:${TERRAFORM_PATH}"
}
  stages{
    stage('terraform init'){
      steps{
        sh "terraform init"
      }
    }
    stage('terraform destroy'){
      steps{
        sh returnStatus: true, script: 'terraform destroy -auto-approve'
      }
    }
  }
}
